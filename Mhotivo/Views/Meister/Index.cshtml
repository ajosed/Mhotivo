@model IEnumerable<Mhotivo.Models.DisplayMeisterModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Views/Shared/_MessageArea.cshtml")

<h2>Mestros Registrados</h2>

<a class="toEdit" data-toggle="modal" role="button" data-target="#EditModal" id="/Meister/Add/"><span class="btn btn-small btn-primary active">Agregar Maestros</span></a>

@if(!Model.Any())
{
    <div class="well well-large">
		<h4 class="blue">Tabla Vacia</h4>
		No hay registros a mostrar.
	</div>
}
else
{
    <table class="table table-striped table-bordered table-hover" id="sample-table-1">
	    <thead>
		    <tr>
				<th>@Html.DisplayNameFor(model => model.FullName)</th>
			    <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                <th></th>
		    </tr>
	    </thead>
        <tbody>
        
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                    <td>
                        <a class="toEdit" data-toggle="modal" role="button" data-target="#EditModal" id="/Meister/Edit/@Html.DisplayFor(modelItem => item.MeisterID)"><i class="icon-edit bigger-120"></i></a>
                        <a class="toDelete" role="button" id="@Html.DisplayFor(modelItem => item.MeisterID)_Val"><i class="icon-trash bigger-120"></i></a>
                        @using (Html.BeginForm("Delete", "Meister", new { id = Html.DisplayFor(modelItem => item.MeisterID) }, FormMethod.Post,
                            new { id = "Form_" + Html.DisplayFor(modelItem => item.MeisterID) + "_Val", style = "display: none" })) { }
                        <input type="hidden" id="@Html.DisplayFor(modelItem => item.MeisterID)_Val_Message"
                               value="¿Realmente desea eliminar el registro de @Html.DisplayFor(modelItem => item.FullName)?" />
                    </td>
                </tr>
            }
        </tbody>
    </table>   
    
}

<!-- Modal -->
<div tabindex="-1" class="modal hide fade" id="EditModal" style="display: none;" aria-hidden="true">
    <div id="body" class="modal-body">
        
    </div>
</div>
